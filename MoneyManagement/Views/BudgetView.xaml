<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyManagement.Views.BudgetView"
             Title="BudgetView">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <!-- Title -->
            <Label Text="Budget" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10" />

            <!-- Budget summary -->
            <Label Text="Your Budget Summary" FontSize="Medium" HorizontalOptions="Center" Margin="0,10,0,10" />

            <!-- Placeholder for budget summary details -->
            <StackLayout x:Name="BudgetSummaryContainer" Margin="0,10,0,10">
                <!-- Budget summary details will be added dynamically here -->
            </StackLayout>

            <!-- Button to add/edit budget -->
            <Button Text="Add/Edit Budget" Clicked="AddEditBudgetButton_Clicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>